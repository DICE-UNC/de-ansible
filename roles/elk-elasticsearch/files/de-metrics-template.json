{
  "template": "de-metrics-*",
  "order": 1,
  "settings": {
    "index.refresh_interval": "5s",
    "index.number_of_replicas": "0"
  },
  "mappings": {
    "app_event": {
        "properties": {
            "app": {
                "type": "nested",
                "include_in_parent": true,
                "properties": {
                    "id": {
                        "type": "string", 
                        "index": "not_analyzed"
                    },
                    "name": {
                        "type": "string", 
                        "index": "analyzed",
                        "fields": {
                            "raw": {"type": "string", "index": "not_analyzed"}
                        }
                    },
                    "integrator_name": {
                        "type": "string",
                        "index": "analyzed",
                        "fields": {
                            "raw": {"type": "string", "index": "not_analyzed"}
                        }
                    },
                    "description": {
                        "type": "string",
                        "index": "analyzed"
                    },
                    "step_count": {
                        "type": "integer"
                    }
                }
            },
            "analysis": {
                "type": "nested",
                "include_in_parent": true,
                "properties": {
                    "id": {
                        "type": "string", 
                        "index": "not_analyzed"
                    },
                    "name": {
                        "type": "string", 
                        "index": "analyzed",
                        "fields": {
                            "raw": {"type": "string", "index": "not_analyzed"}
                        }
                    },
                    "output_dir": {
                        "type": "string",
                        "index": "analyzed",
                        "fields": {
                            "raw": {"type": "string", "index": "not_analyzed"}
                        }
                    }
                }
            },
            "request": {
                "type": "nested",
                "include_in_parent": true,
                "properties": {
                    "endpoint": {
                        "type": "string", 
                        "index": "analyzed",
                        "fields": {
                            "raw": {"type": "string", "index": "not_analyzed"}
                        }
                    },
                    "method": {
                        "type": "string",
                        "index": "analyzed"
                    },
                    "url": {
                        "type": "string",
                        "index": "analyzed",
                        "fields": {
                            "raw": {"type": "string", "index": "not_analyzed"}
                        }
                    },
                    "time": {
                        "type": "date"
                    },
                    "uuid": {
                        "type": "string",
                        "index": "not_analyzed"
                    },
                    "ip": {
                        "type": "ip",
                        "store": "yes",
                        "index": "analyzed"
                    }
                }
            }
        }
    }

  },
  "aliases": {
      "de-metrics": {}
  }
}

